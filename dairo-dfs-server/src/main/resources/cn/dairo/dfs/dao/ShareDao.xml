<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dairo.dfs.dao.ShareDao">

    <!--添加一条数据-->
    <insert id="add">
        insert into share(id, userId, pwd, names, folder, endDate, date)
        values (#{id}, #{userId}, #{pwd}, #{names}, #{folder}, #{endDate}, #{date})
    </insert>

    <!--通过ID获取一条数据-->
    <select id="getOne" resultType="ShareDto">
        select *
        from share
        where id = #{0}
    </select>

    <!--获取所有分享列表-->
    <select id="getByUser" resultType="ShareDto">
        select *
        from share
        where userId = #{0}
    </select>

    <!--删除分享-->
    <delete id="delete">
        delete
        from share
        where userId = #{userId}
          and id in (${ids})
    </delete>
</mapper>